{
    "name": "ewamvscadaptor",
    "displayName": "eWamVSCAdaptor",
    "description": "e-Wam Visual Studio Adaptor",
    "version": "0.1.1",
    "publisher": "mphasiswyde",
	"galleryBanner": {
		"color": "#5c2d91",
		"theme": "dark"
	},
	"bugs": {
		"url": "https://github.com/MphasisWyde/visualStudioCodeEwam/issues",
		"email": "support@wyde.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/MphasisWyde/visualStudioCodeEwam.git"
	},
    "homepage": "https://github.com/MphasisWyde/visualStudioCodeEwam/tree/master/README.md",
	"categories": [
		"Other"
	],
    "engines": {
        "vscode": "^0.10.1"
    },
    "activationEvents": [
        "onLanguage:gold"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "snippets": [
            {
                "language": "gold",
                "path": "./snippets/snippets.json"
            }
        ],
        "keybindings": [
            {
                "command": "ewam.parse",
                "key": "F7",
                "mac": "F7",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.scenario",
                "key": "alt+s",
                "mac": "alt+s",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.checkIn",
                "key": "alt+i",
                "mac": "alt+i",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.checkOut",
                "key": "alt+c",
                "mac": "alt+c",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.openEntity",
                "key": "alt+o",
                "mac": "alt+o",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.reimplem",
                "key": "alt+r",
                "mac": "alt+r",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.deliver",
                "key": "alt+d",
                "mac": "alt+d",
                "when": "editorTextFocus"
            },
            {
                "command": "ewam.newClass",
                "key": "alt+n",
                "mac": "alt+n"
            },
            {
                "command": "ewam.metaInfo",
                "key": "alt+m",
                "mac": "alt+m"
            },
            {
                "command": "ewam.run",
                "key": "F5",
                "mac": "F5"
            }
        ],
        "commands": [
            {
                "command": "ewam.openEntity",
                "title": "eWam Open Entity"
            },
            {
                "command": "ewam.checkIn",
                "title": "eWam Check In"
            },
            {
                "command": "ewam.checkOut",
                "title": "eWam Check Out"
            },
            {
                "command": "ewam.parse",
                "title": "eWam Parse"
            },
            {
                "command": "ewam.reimplem",
                "title": "eWam Reimplem"
            },
            {
                "command": "ewam.scenario",
                "title": "eWam Scenario"
            },
            {
                "command": "ewam.deliver",
                "title": "eWam Deliver"
            },
            {
                "command": "ewam.newClass",
                "title": "eWam New Class"
            },
            {
                "command": "ewam.metaInfo",
                "title": "eWam Class Meta Info"
            },
            {
                "command": "ewam.run",
                "title": "eWam Run Application"
            }
        ],
        "languages": [
            {
                "id": "gold",
                "aliases": [
                    "Gold",
                    "gold"
                ],
                "extensions": [
                    ".gold",
                    ".god"
                ],
                "configuration": "./gold.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gold",
                "scopeName": "source.gold",
                "path": "./syntaxes/gold.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "eWam configuration",
            "properties": {
                "ewam.url": {
                    "type": "string",
                    "default": "http://localhost:8082",
                    "description": "End point of your eWam as a service"
                },
                "ewam.className": {
                    "type": "string",
                    "default": "aWFApplicationLauncher",
                    "description": "Class used to launch the application"
                },
                "ewam.methodName": {
                    "type": "string",
                    "default": "Run",
                    "description": "Method used to launch the application"
                },
                "ewam.args": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "default": [{"key":"WFAPPLINAME","value":"WynsureSolution_Life_US"}, {"key":"RUNCONTEXTNAME","value":"MultiLanguageRunningContext"}],
                    "description": "Arguments used to launch the application"
                }
            }
        }
    },
    "scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "0.10.x"
    },
    "dependencies": {
        "axios": "^0.9.1",
        "vscode-languageclient": "^1.1.0"
    }
}